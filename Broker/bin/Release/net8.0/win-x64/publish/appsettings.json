{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Kestrel": { "EndpointDefaults": { "Protocols": "Http2" } },

    "Broker": {
        "StorageMode": "Persistent", // "Transient" | "Persistent"
        "DataDir": "data", // relative to Broker working dir
        "MaxRetries": 3,
        "WorkerPeriodMs": 1000
    }
}
